<div class="row">
  <div class="col-md-4">
    <div class="card" style="width: 11rem">
      <%= image_tag current_user.gravatar_url, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title text-center"> <%= current_user.name %> </h5>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <h2 class="card-title"> Update Your Profile Here </h2>
    <%= render 'form' %>
    <div class="my-2">
       <h3>Cancel my account</h3>

        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>
    </div>
  </div>
  
</div>
